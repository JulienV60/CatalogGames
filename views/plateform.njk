{% extends "layout.njk" %}

{%block css %}
  <link rel="stylesheet" href="Public/css/style.css"/>
{% endblock %}

{% block content %}

<div class="nav">
    <h1>Platforms</h1>
</div>

<div class="listeplatform">

        {%for item in platform %}

          <ul>
            <li>
              <a href="/Games/{{item.name}}/{{item.id}}">{{item.name}} </a>
              <img href="{{item.logo.url}}" src="{{item.logo.url}}">
            </li>
          </ul>

        {% endfor %}

</div>
<div class="footer">
<a href="/plateforms/{{numberOfPages[0]}}"><<</a>
  {% if indexPage == 0 %}
  {% else %}
<a href="/plateforms/{{indexPage-1}}"><</a>
  {% endif %}
      {% set limit = 10 %}
      {% for page in numberOfPages %}
      {% if indexPage >= limit %}
      {% set iterator = page + indexPage %}
      {% if iterator <= limit + (indexPage) %}
      {% if iterator <= numberOfPages.length %}
       <a href="/plateforms/{{iterator}}">{{iterator}}</a>
      {% endif %}
      {% endif %}
      {% else %}
      {% if page<= limit %}
      <a href="/plateforms/{{page}}">{{page}}</a>
      {% endif %}
      {% endif %}
      {% endfor %}

      {% if indexPage == numberOfPages.length %}
      {% else %}
      <a href="/plateforms/{{indexPage+1}}">></a>
      {% endif %}
<a href="/plateforms/{{numberOfPages.length}}">>></a>
</div>
{% endblock %}

